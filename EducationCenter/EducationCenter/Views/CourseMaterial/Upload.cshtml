@model BLL.DTO.CourseMaterial.CreateCourseMaterialDto
@{
    ViewData["Title"] = "Upload Course Material";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 fw-bold mb-0">Upload New Material</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Upload" asp-controller="CourseMaterial" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" name="courseId" value="@ViewBag.CourseId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter material title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FileUrl" class="form-label fw-bold">File URL</label>
                            <input asp-for="FileUrl" class="form-control" placeholder="Enter URL to the file" />
                            <div class="form-text">Enter the URL where the material file is hosted</div>
                            <span asp-validation-for="FileUrl" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <a href="@Url.Action("Materials", "Lecturer", new { courseId = ViewBag.CourseId })"
                                class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-upload me-1"></i>Upload Material
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}