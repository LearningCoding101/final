@model BLL.DTO.News.CreateNewsDto
@{
    ViewData["Title"] = "Create News";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h2 fw-bold mb-0">Create News/Event</h1>
                        <a href="@Url.Action("Index", "News")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to News
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" asp-controller="News" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Enter news title"
                                        maxlength="200" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Type" class="form-label fw-bold">Type</label>
                                    <select asp-for="Type" id="newsType" class="form-select" required>
                                        <option value="">-- Select Type --</option>
                                        <option value="News">News</option>
                                        <option value="Events">Events</option>
                                        <option value="Partnerships">Partnerships</option>
                                        <option value="Projects">Projects</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Category and Featured Status -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="Category" class="form-label fw-bold">Category</label>
                                    <select name="Category" id="Category" class="form-select">
                                        <option value="">-- Select Category --</option>
                                        <option value="News">General</option>
                                        <option value="Events">Academic</option>
                                        <option value="Partnerships">Extracurricular</option>
                                        <option value="Projects">Administrative</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold d-block">Options</label>
                                    <div class="form-check form-check-inline mt-2">
                                        <input class="form-check-input" type="checkbox" name="IsFeatured"
                                            id="isFeatured" value="true">
                                        <label class="form-check-label" for="isFeatured">Featured</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" name="IsPublished"
                                            id="isPublished" value="true" checked>
                                        <label class="form-check-label" for="isPublished">Published</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thumbnail Upload or URL -->
                        <div class="row mb-3">
                            @* <div class="col-md-6"> *@
                            @*     <div class="form-group mb-3"> *@
                            @*         <label for="ThumbnailFile" class="form-label fw-bold">Thumbnail Image</label> *@
                            @*         <input type="file" class="form-control" id="ThumbnailFile" name="ThumbnailFile" *@
                            @*             accept="image/*" /> *@
                            @*         <div class="form-text">Upload an image for the news thumbnail</div> *@
                            @*     </div> *@
                            @* </div> *@
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ThumbnailUrl" class="form-label fw-bold">Or Thumbnail URL</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-image"></i></span>
                                        <input asp-for="ThumbnailUrl" class="form-control"
                                            placeholder="Or enter image URL" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Event Fields -->
                        <div id="eventFields" class="row mb-3" style="display:none;">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EventDate" class="form-label fw-bold">Event Date and Time</label>
                                    <input asp-for="EventDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="EventDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EventLocation" class="form-label fw-bold">Event Location</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                        <input asp-for="EventLocation" class="form-control"
                                            placeholder="Enter event location" />
                                    </div>
                                    <span asp-validation-for="EventLocation" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Additional Event Fields -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="EventOrganizer" class="form-label fw-bold">Event Organizer</label>
                                    <input type="text" id="EventOrganizer" name="EventOrganizer" class="form-control"
                                        placeholder="Enter organizer name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="MaxAttendees" class="form-label fw-bold">Maximum Attendees</label>
                                    <input type="number" id="MaxAttendees" name="MaxAttendees" class="form-control"
                                        placeholder="Enter maximum capacity (optional)" min="1" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label for="RegistrationUrl" class="form-label fw-bold">Registration Link</label>
                                    <input type="url" id="RegistrationUrl" name="RegistrationUrl" class="form-control"
                                        placeholder="Enter registration URL (optional)" />
                                </div>
                            </div>
                        </div>

                        <!-- Main Content -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Content" class="form-label fw-bold">Content</label>
                                    <textarea asp-for="Content" id="newsContent" class="form-control" rows="10"
                                        placeholder="Enter news content" required></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Related Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="Tags" class="form-label fw-bold">Tags</label>
                                    <input type="text" id="Tags" name="Tags" class="form-control"
                                        placeholder="Enter tags separated by commas" />
                                    <div class="form-text">Example: academic, scholarship, technology</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="ExpiryDate" class="form-label fw-bold">Expiry Date</label>
                                    <input type="date" id="ExpiryDate" name="ExpiryDate" class="form-control" />
                                    <div class="form-text">Date when this news is no longer relevant (optional)</div>
                                </div>
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="reset" class="btn btn-secondary me-2">
                                <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                            </button>
                            <button type="submit" name="SaveDraft" value="true" class="btn btn-outline-primary me-2">
                                <i class="bi bi-file-earmark me-1"></i>Save as Draft
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Publish
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const newsTypeSelect = document.getElementById('newsType');
            const eventFields = document.getElementById('eventFields');

            function toggleEventFields() {
                if (newsTypeSelect.value === 'Event') {
                    eventFields.style.display = 'flex';
                } else {
                    eventFields.style.display = 'none';
                }
            }

            // Initialize on page load
            toggleEventFields();

            // Listen for changes
            newsTypeSelect.addEventListener('change', toggleEventFields);
        });
    </script>


}