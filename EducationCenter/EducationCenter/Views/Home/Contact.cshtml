@{
    ViewData["Title"] = "Contact Us";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 fw-bold mb-1">Contact Us</h1>
                            <p class="text-muted mb-0">We're here to help with any questions you might have</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 fw-bold mb-0">Contact Information</h2>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary text-white rounded-circle p-2 me-3">
                            <i class="bi bi-geo-alt fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Address</h5>
                            <p class="mb-0">123 Education Street, District 1<br>Ho Chi Minh City, Vietnam</p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary text-white rounded-circle p-2 me-3">
                            <i class="bi bi-envelope fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Email</h5>
                            <p class="mb-0">
                                <a href="mailto:info@educationcenter.com"
                                    class="text-decoration-none">info@educationcenter.com</a><br>
                                <a href="mailto:admissions@educationcenter.com"
                                    class="text-decoration-none">admissions@educationcenter.com</a>
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary text-white rounded-circle p-2 me-3">
                            <i class="bi bi-telephone fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Phone</h5>
                            <p class="mb-0">
                                <a href="tel:+84123456789" class="text-decoration-none">+84 123 456 789</a><br>
                                <a href="tel:+84987654321" class="text-decoration-none">+84 987 654 321</a>
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white rounded-circle p-2 me-3">
                            <i class="bi bi-clock fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Working Hours</h5>
                            <p class="mb-0">
                                Monday - Friday: 8:00 AM - 5:00 PM<br>
                                Saturday: 8:00 AM - 12:00 PM<br>
                                Sunday: Closed
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 fw-bold mb-0">Send us a Message</h2>
                </div>
                <div class="card-body">
                    <form id="contactForm" method="post" asp-action="SubmitContact" asp-controller="Home">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fullName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="fullName" name="fullName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" name="phone">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <select class="form-select" id="subject" name="subject" required>
                                    <option value="" selected disabled>Select a subject</option>
                                    <option value="General Inquiry">General Inquiry</option>
                                    <option value="Course Information">Course Information</option>
                                    <option value="Admissions">Admissions</option>
                                    <option value="Technical Support">Technical Support</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Your Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-1"></i> Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 fw-bold mb-0">Find Us</h2>
                </div>
                <div class="card-body p-0">
                    <div class="ratio ratio-21x9">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.5177580567765!2d106.69893937580149!3d10.771608089387617!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f40a3b49e59%3A0xa1bd14e483a602db!2sBen%20Thanh%20Market!5e0!3m2!1sen!2sus!4v1685432846195!5m2!1sen!2sus"
                            allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                            class="w-100 border-0"></iframe>
                    </div>
                </div>
            </div>
        </div>

        <!-- Getting Here Section -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h2 class="h4 fw-bold mb-0">Getting Here</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-bus-front fs-4 text-primary me-2"></i>
                                <h5 class="mb-0">By Bus</h5>
                            </div>
                            <p>Bus routes 1, 4, 8, and 19 stop within walking distance of our campus. The nearest bus
                                stop is "Education Center" on Education Street.</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-bicycle fs-4 text-primary me-2"></i>
                                <h5 class="mb-0">By Bike</h5>
                            </div>
                            <p>Bike racks are available in front of the main entrance. We encourage green
                                transportation!</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-car-front fs-4 text-primary me-2"></i>
                                <h5 class="mb-0">By Car</h5>
                            </div>
                            <p>Limited parking is available on-site. Please contact our administration in advance to
                                reserve a parking spot.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mt-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h2 class="h4 fw-bold mb-0">Stay Updated</h2>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h3 class="h5">Subscribe to Our Newsletter</h3>
                        <p class="text-muted">Get the latest news, events, and course updates directly to your inbox.
                        </p>
                        <ul class="list-unstyled mb-4">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i> Educational tips and resources
                            </li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i> Upcoming events and webinars
                            </li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i> New course announcements</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <form id="subscriptionForm" method="post" asp-action="Subscribe" asp-controller="Home">
                            <div class="mb-3">
                                <label for="subscriptionEmail" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="subscriptionEmail" name="Email"
                                    placeholder="Enter your email address" required>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="newsCheck" name="SubscribeToNews"
                                    checked>
                                <label class="form-check-label" for="newsCheck">News and Updates</label>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="eventsCheck"
                                    name="SubscribeToEvents" checked>
                                <label class="form-check-label" for="eventsCheck">Events and Webinars</label>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-envelope-check me-1"></i> Subscribe
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    alert('Thank you for your message! We will get back to you soon.');
                    contactForm.reset();
                });
            }
        });
        const subscriptionForm = document.getElementById('subscriptionForm');
        if (subscriptionForm) {
            subscriptionForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const email = document.getElementById('subscriptionEmail').value;
                alert(`Thank you! ${email} has been subscribed to our newsletter.`);
                subscriptionForm.reset();
            });
        }
    </script>
}